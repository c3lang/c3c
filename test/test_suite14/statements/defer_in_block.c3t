// #target: macos-x64
module foo;
extern fn void printf(char*,...);

fn void test(int x)
{
	defer printf("---\n");
	{|
		defer printf("Hello %d\n", x);
		x *= 2;
		if (x < 100) return;
		x *= 10000;
	|};
	printf("+++\n");
	if (x == 0)
	{
		printf("0x\n");
		return;
	}
    if (x == 1) return;
}

fn void main()
{
	test(123);
	test(1);
	test(0);
}
