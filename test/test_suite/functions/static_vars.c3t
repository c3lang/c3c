module foo;

fn int test()
{
    static int x = 1;
    global int y = 2;
    x++;
    return x;
}

// #expect: foo.ll

@test.x = hidden thread_local global i32 1, align 4
@test.y = hidden global i32 2, align 4

define i32 @foo.test()

  %0 = load i32, i32* @test.x, align 4
  %add = add i32 %0, 1
  store i32 %add, i32* @test.x, align 4
  %1 = load i32, i32* @test.x, align 4
  ret i32 %1
